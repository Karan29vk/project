<script type="text/javascript">
	Morris.Bar({
	  element: 'task-grid',
	  data: [
	    { y: 'Highest', a: 5},
	    { y: 'High', a: 6},
	    { y: 'Middum', a: 3},
	    { y: 'Low', a: 1},
	    { y: 'Lowest', a: 0}
	  ],
	  xkey: 'y',
	  ykeys: ['a'],
	  labels: [' '],
	  barColors: function (row, series, type) {
		if(row.label == "Highest") return "#C62828";
		else if(row.label == "High") return "#F44336";
		else if(row.label == "Middum") return "#000080";
		else if(row.label == "Low") return "#4CAF50";
		else if(row.label == "Lowest") return '#696969'
		}
	});
	
	$('[data-toggle="popover"]').popover({ 
    	html : true,
    });

</script>