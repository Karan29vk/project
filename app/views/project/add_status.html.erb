<%= content_for :header do %>
	Setting - List Status - Add Status
<% end %>
<%= content_for :Listheader do %>
	<li><a href="#">Setting</a></li>
	<li><a href="list_status">List Status</a></li>
	<li class="active">Add Status</li>
<% end %>
<div class="row">
	<div class="col-lg-3 col-md-3">
		<%= render 'all_setting' %>
	</div>
	<div class="col-lg-9 col-md-9">
		<div class="panel panel-default">
			<div class="panel-heading">
				<span class="my-heading">Status</span>
				<%= link_to ' ' , list_status_path , class: "glyphicon glyphicon-arrow-left pull-right" %>
			</div>
			<div class="panel-body">
				<%= form_tag({:controller => "project", :action => "list_status"}, :class=> "form-horizontal form-validate-jquery" )do %>
					<fieldset>
						<div class="form-group">
							<div class="row">
								<div class="col-lg-8 col-md-8">
									<label>Status Name </label>
								</div>
							</div>
							<div class="row">
								<div class="col-lg-8 col-md-8">
									<%= text_field_tag 'name' , nil , class: "form-control" , :placeholder => "Like : Open ,On hold , close (etc)..." , required: true %>
								</div>
							</div>
						</div>
					</fieldset>
					<div class="row">
						<div class="col-lg-8 col-md-8">
							<%= submit_tag 'Save' , class: "btn btn-primary" %>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
	</div>
</div>