									<td><%= link_to 'follow-up' , add_task_path %></td>
									<td class="pull-right">15/04/2016</td>
								</tr>
								<tr>
									<td><%= check_box_tag 'accept'%></td>
									<td><%= link_to 'E-Mail' , add_task_path %></td>
									<td class="pull-right">26/04/2016</td>
								</tr>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-8 col-md-8">
				<big><i class="icon-files-empty"></i>Notes</big>
				<%= link_to 'Add Note' , "#modal_form_vertical" , class:"text-blue btn btn-default pull-right" , "data-toggle" => "modal" %>
				<div id="modal_form_vertical" class="modal fade">
					<%= render 'add_note_popup' %>
				</div>
