<%= content_for :header do %>
	Add Note
<% end %>
<div class="panel panel-default">
	<div class="panel-heading">
		<span class="my-heading">Note</span>
	</div>
	<div class="panel-body">
		<%= form_tag({:controller => "project", :action => "list_notes"}, :class=> "form-horizontal form-validate-jquery" )do %>
			<div class="form-group">
				<div class="row">
					<div class="col-lg-8 col-md-8">
						<label>Employee  </label>
						<%= text_field_tag 'emp' , nil , class: "form-control" , :disabled => true , :value => "Dhaval Trivedi" %>
					</div>
				</div>
			</div>
			<div class="form-group">
				<div class="row">
					<div class="col-lg-8 col-md-8">
						<label>Subject  </label>
						<%= text_field_tag 'subject' , nil , class: "form-control", :required => true %>
					</div>
				</div>
			</div>
			<div class="form-group">
				<div class="row">
					<div class="col-lg-8 col-md-8">
						<label> Related to </label>
						<select data-placeholder="Select a Opportunity" class="select" required = true>
							<option>
								<optgroup label="Categories">
									<option>Organization</option>
									<option>Opportunity</option>
									<option>Person</option>
								</optgroup>
							</option>
						</select>
					</div>
				</div>
			</div>
			<div class="form-group">
				<div class="row">
					<div class="col-lg-8 col-md-8">
						<label>Details  </label>
						<%= text_area_tag 'details' , nil , class: "form-control", :required => true %>
					</div>
				</div>
			</div>
			<div class="form-group">
				<div class="row">
					<div class="col-lg-8 col-md-8">
						<%= button_to 'Save' , case_page_path , class: "btn btn-primary" %>
						<%= link_to 'Cancle' , case_page_path , class: "btn btn-link" %>
					</div>
				</div>
			</div>
		<% end %>
	</div>
</div>